// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  username     String    @db.VarChar(50)
  email        String    @db.VarChar(255)
  passwordHash String    @map("password_hash") @db.VarChar(255)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  projects     Project[]

  @@unique([username])
  @@unique([email])
  @@index([username])
  @@index([email])
  @@map("users")
}

model Powerplant {
  id        String    @id @default(uuid())
  name      String    @unique @db.VarChar(255)
  location  String?   @db.VarChar(255)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  parts     Part[]
  projects  Project[]

  @@index([name])
  @@map("powerplants")
}

model Part {
  id          String    @id @default(uuid())
  powerplantId String   @map("powerplant_id") @db.Uuid
  name        String    @db.VarChar(255)
  description String?   @db.Text
  displayOrder Int      @default(0) @map("display_order")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  powerplant  Powerplant @relation(fields: [powerplantId], references: [id], onDelete: Cascade)
  checkups    Checkup[]

  @@index([powerplantId])
  @@map("parts")
}

model Checkup {
  id                  String    @id @default(uuid())
  partId              String    @map("part_id") @db.Uuid
  name                String    @db.VarChar(255)
  description         String?   @db.Text
  documentationImages Bytes[]   @map("documentation_images")
  documentationText   String?  @map("documentation_text") @db.Text
  displayOrder        Int       @default(0) @map("display_order")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  part                Part      @relation(fields: [partId], references: [id], onDelete: Cascade)
  checkupStatuses     CheckupStatus[]

  @@index([partId])
  @@map("checkups")
}

model Project {
  id           String         @id @default(uuid())
  userId       String         @map("user_id") @db.Uuid
  powerplantId String         @map("powerplant_id") @db.Uuid
  status       String         @default("In Progress") @db.VarChar(20)
  createdAt    DateTime       @default(now()) @map("created_at")
  finishedAt   DateTime?      @map("finished_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  powerplant   Powerplant     @relation(fields: [powerplantId], references: [id], onDelete: Restrict)
  checkupStatuses CheckupStatus[]

  @@index([userId])
  @@index([status])
  @@map("projects")
}

model CheckupStatus {
  id         String   @id @default(uuid())
  projectId  String   @map("project_id") @db.Uuid
  checkupId  String   @map("checkup_id") @db.Uuid
  statusValue String  @map("status_value") @db.VarChar(20)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  checkup    Checkup  @relation(fields: [checkupId], references: [id], onDelete: Cascade)

  @@unique([projectId, checkupId])
  @@index([projectId])
  @@index([checkupId])
  @@map("checkup_statuses")
}
